<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.categories.CategoriesActivity"
    android:background="@drawable/gradien_main">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/categories_toolbar"
        style="@style/Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_categories"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:fontFamily="@font/arajozoor"
            style="@style/Toolbar.TitleText"/>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_anbiaa_stories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:cropToPadding="true"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_anbiaa"
        android:visibility="invisible"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_joha_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_joha"
            android:visibility="invisible"
            android:layout_below="@+id/button_anbiaa_stories"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_animals_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_animals"
            android:visibility="invisible"
            android:layout_below="@+id/button_joha_stories"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_general_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cropToPadding="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_general"
            android:visibility="invisible"
            android:layout_below="@+id/button_animals_stories"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>